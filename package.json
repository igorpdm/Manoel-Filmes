{
  "name": "manoel-filmes",
  "version": "1.0.0",
  "description": "Manoel Filmes - Player sincronizado com Bot Discord integrado",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/api/server.ts",
    "dev:bot": "tsx watch src/bot/index.ts",
    "build:css": "tailwindcss -i ./src/styles/main.css -o ./public/styles.css",
    "watch:css": "tailwindcss -i ./src/styles/main.css -o ./public/styles.css --watch",
    "dev:all": "concurrently -n server,bot,css -c blue,magenta,yellow \"npm:dev\" \"npm:dev:bot\" \"npm:watch:css\"",
    "start": "tsx src/api/server.ts",
    "start:bot": "tsx src/bot/index.ts",
    "start:all": "concurrently -n server,bot -c blue,magenta \"npm:start\" \"npm:start:bot\"",
    "build": "tsc"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "axios": "^1.7.9",
    "better-sqlite3": "^12.6.2",
    "cors": "^2.8.5",
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "fluent-ffmpeg": "^2.1.3",
    "multer": "^1.4.5-lts.1",
    "tsx": "^4.19.2",
    "ws": "^8.18.0",
    "yt-search": "^2.12.1"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.7",
    "@types/ws": "^8.5.14",
    "@types/yt-search": "^2.10.3",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
